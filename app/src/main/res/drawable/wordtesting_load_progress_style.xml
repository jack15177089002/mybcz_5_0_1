<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp"/>
            <gradient android:startColor="#ff000000" android:endColor="#ff000000" android:angle="270"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dp"/>
                <gradient android:startColor="@color/wordtesting_common_blue" android:endColor="@color/wordtesting_common_blue" android:angle="270" android:centerColor="@color/wordtesting_common_blue"/>
            </shape>
        </clip>
    </item>
</layer-list>
