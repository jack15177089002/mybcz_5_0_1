<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="?attr/color_common_bar" android:layout_width="match_parent" android:layout_height="35dp">
        <ImageView android:id="@+id/back" android:paddingLeft="20dp" android:paddingTop="7.5dp" android:paddingRight="8dp" android:paddingBottom="7.5dp" android:layout_width="48dp" android:layout_height="match_parent" android:src="?attr/drawable_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/T3" android:textColor="?attr/color_button_text" android:gravity="center" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/feedback_title" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ListView android:id="@+id/feedback_content_list" android:background="?attr/color_common_bg" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="0dp" android:listSelector="#0000" android:cacheColorHint="#0000" android:layout_weight="1"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="?attr/color_common_bar" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textSize="@dimen/T2" android:textColor="?attr/color_button_text_mediabar" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/feedback_edit" android:paddingLeft="10dp" android:paddingTop="0dp" android:paddingRight="10dp" android:paddingBottom="0dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="12dp" android:layout_marginBottom="5dp" android:minHeight="30dp" android:hint="@string/feedback_hint" android:maxLines="3" android:layout_weight="1" android:inputType="textMultiLine" android:imeOptions="actionSend"/>
        <Button android:textSize="@dimen/T3" android:textColor="?attr/color_common_white" android:gravity="center" android:id="@+id/feedback_sendBtn" android:padding="0dp" android:layout_width="70dp" android:layout_height="30dp" android:layout_marginRight="10dp" android:text="@string/feedback_send"/>
    </LinearLayout>
</LinearLayout>
