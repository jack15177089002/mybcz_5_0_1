<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="?attr/color_common_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="?attr/color_common_bar" android:layout_width="match_parent" android:layout_height="35dp">
        <ImageView android:id="@+id/back" android:paddingLeft="20dp" android:paddingTop="7.5dp" android:paddingRight="8dp" android:paddingBottom="7.5dp" android:layout_width="48dp" android:layout_height="match_parent" android:src="?attr/drawable_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/T3" android:textColor="?attr/color_button_text" android:gravity="center" android:id="@+id/confirm" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="确认" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:background="?attr/color_alarm_bg" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="25dp">
        <TextView android:textSize="@dimen/T3" android:textColor="?attr/color_alarm_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="每日提醒我背单词" android:layout_centerVertical="true"/>
        <com.kyleduo.switchbutton.SwitchButton android:id="@+id/switcher" android:layout_width="50dp" android:layout_height="25dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="@dimen/T2" android:textColor="?attr/color_alarm_text2" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="35dp" android:layout_marginLeft="20dp" android:text="开启就能收到包过组合给您的背单词提醒噢"/>
    <LinearLayout android:layout_gravity="center_horizontal" android:id="@+id/notice_date_picker" android:layout_width="wrap_content" android:layout_height="match_parent">
        <kankan.wheel.widget.WheelView android:layout_gravity="center" android:id="@+id/notice_hour" android:layout_width="145dp" android:layout_height="match_parent"/>
        <View android:background="?attr/color_common_bg" android:layout_width="1dp" android:layout_height="match_parent"/>
        <kankan.wheel.widget.WheelView android:layout_gravity="center" android:id="@+id/notice_minute" android:layout_width="145dp" android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
