<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/share_weixin_container" android:layout_width="230dp" android:layout_height="150dp" android:layout_centerInParent="true">
        <TextView android:textSize="@dimen/T3" android:textColor="?attr/color_message_sharetext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="分享到" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/share_weixin_close" android:background="#00000000" android:padding="9dp" android:layout_width="33dp" android:layout_height="33dp" android:src="?attr/drawable_close" android:layout_alignParentRight="true"/>
        <View android:id="@+id/share_weixin_divider" android:background="?attr/color_message_shareline" android:layout_width="1px" android:layout_height="match_parent" android:layout_marginTop="40dp" android:layout_marginBottom="20dp" android:layout_centerHorizontal="true"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/share_weixin_timeline" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="45dp" android:layout_marginBottom="23dp" android:layout_toLeftOf="@+id/share_weixin_divider">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="50dp" android:layout_height="50dp" android:src="?attr/drawable_share_circleoffriends"/>
            <TextView android:textSize="@dimen/T3" android:textColor="?attr/color_message_sharetext" android:gravity="bottom" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="朋友圈"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/share_weixin_friends" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="45dp" android:layout_marginBottom="23dp" android:layout_toRightOf="@+id/share_weixin_divider">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="50dp" android:layout_height="50dp" android:src="?attr/drawable_share_weixin"/>
            <TextView android:textSize="@dimen/T3" android:textColor="?attr/color_message_sharetext" android:gravity="bottom" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="微信好友"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
