<?xml version="1.0" encoding="utf-8"?>
<com.baicizhan.client.fight.customview.FriendItemView xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/friend_item" android:layout_width="match_parent" android:layout_height="@dimen/fight_friend_rank_item_height">
    <LinearLayout android:id="@+id/item_menu" android:layout_width="wrap_content" android:layout_height="match_parent">
        <Button android:textColor="@android:color/white" android:id="@+id/delete_friend" android:background="#ffff0000" android:layout_width="48dp" android:layout_height="match_parent" android:text="@string/fight_delete_friend"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/friend" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/fight_friend_ranking_text_size" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/friend_ranking_number" android:background="@color/fight_def_blue_color" android:layout_width="@dimen/fight_friend_ranking_width" android:layout_height="match_parent"/>
        <com.baicizhan.client.business.widget.CircleImageView android:layout_gravity="center_vertical" android:id="@+id/friend_image" android:layout_width="@dimen/fight_friend_image_size" android:layout_height="@dimen/fight_friend_image_size" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" app:border_width="2dp"/>
        <TextView android:textSize="@dimen/fight_friend_nickname_text_size" android:textColor="@color/fight_def_gray_color" android:gravity="left" android:layout_gravity="center_vertical" android:id="@+id/friend_nickname" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/fight_friend_score_text_size" android:textColor="@color/fight_def_blue_color" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/friend_score_win_count" android:layout_width="@dimen/fight_friend_score_width" android:layout_height="wrap_content"/>
        <TextView android:textSize="@dimen/fight_friend_score_text_size" android:textColor="@color/fight_def_gray_color" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/friend_score_lose_count" android:layout_width="@dimen/fight_friend_score_width" android:layout_height="wrap_content"/>
    </LinearLayout>
</com.baicizhan.client.fight.customview.FriendItemView>
