<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/wordtesting_baoguo_mask" android:background="#ff222222" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/wordtesting_baoguo_tip_back" android:paddingLeft="18dp" android:paddingBottom="15dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/wordtesting_baoguo_tip_back" android:layout_centerInParent="true" android:contentDescription="@string/wordtesting_content_desc_default"/>
    <TextView android:textSize="@dimen/wordtesting_baoguo_tip_size" android:textColor="#ffffffff" android:gravity="center_vertical" android:id="@+id/wordtesting_baoguo_tip" android:paddingBottom="15dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:text="@string/wordtesting_baoguo_tip" android:layout_alignRight="@+id/wordtesting_baoguo_tip_back" android:layout_centerInParent="true" android:lineSpacingExtra="3dp"/>
    <ImageView android:id="@+id/wordtesting_baoguo_shade" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-10dp" android:layout_marginBottom="-5dp" android:src="@drawable/wordtesting_baoguo_shade" android:layout_alignLeft="@+id/wordtesting_baoguo_tip_back" android:layout_alignBottom="@+id/wordtesting_baoguo_tip_back" android:layout_centerInParent="true" android:contentDescription="@string/wordtesting_content_desc_default"/>
    <ImageView android:id="@+id/wordtesting_baoguo" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-18dp" android:src="@drawable/wordtesting_baoguo" android:layout_alignLeft="@+id/wordtesting_baoguo_tip_back" android:layout_alignBottom="@+id/wordtesting_baoguo_tip_back" android:layout_centerInParent="true" android:contentDescription="@string/wordtesting_content_desc_default"/>
    <ImageView android:id="@+id/wordtesting_baoguo_close" android:background="@drawable/business_close_selector" android:visibility="invisible" android:layout_width="@dimen/main_back_width" android:layout_height="@dimen/main_back_height" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@string/wordtesting_content_desc_default"/>
</RelativeLayout>
