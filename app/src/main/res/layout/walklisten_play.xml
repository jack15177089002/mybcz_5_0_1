<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="?attr/color_common_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/walklisten_home" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="35dp" android:src="?attr/drawable_home"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="35dp" android:layout_toRightOf="@+id/walklisten_home">
        <TextView android:textSize="@dimen/T8" android:textColor="?attr/color_bar_text" android:gravity="center_vertical" android:id="@+id/walklisten_waitting_pass" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3"/>
        <ImageView android:layout_width="11dp" android:layout_height="match_parent" android:src="?attr/drawable_topic_top_bg" android:scaleType="fitXY"/>
        <TextView android:textSize="@dimen/T8" android:textColor="?attr/color_bar_text" android:gravity="center_vertical" android:id="@+id/walklisten_last_topic" android:background="?attr/color_common_keyboard_bg" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:maxLines="2" android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="@dimen/T9" android:textColor="?attr/color_button_text_mediabar" android:id="@+id/walklisten_word" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RelativeLayout android:id="@+id/walklisten_sound_frame" android:background="?attr/drawable_button_line" android:layout_width="45dp" android:layout_height="30dp" android:layout_marginTop="16dp">
            <ImageView android:id="@+id/walklisten_sound" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout android:id="@+id/walklisten_wiki_container" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:id="@+id/walklisten_progress_layout" android:background="#99434343" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_gravity="bottom" android:id="@+id/walklisten_progress" android:layout_width="match_parent" android:layout_height="4dp" android:progressDrawable="@drawable/business_progress_horizontal" style="?android:attr/progressBarStyleHorizontal"/>
    </FrameLayout>
    <View android:id="@+id/walklisten_mask" android:background="#e5000000" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
