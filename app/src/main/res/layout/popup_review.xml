<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="115dp" android:layout_height="140dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/items_bg" android:background="#fff" android:layout_width="match_parent" android:layout_height="135dp">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/item_wordlist" android:layout_width="match_parent" android:layout_height="45dp">
            <ImageView android:id="@+id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:src="?attr/drawable_review" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/T2" android:textColor="?attr/color_button_text" android:id="@+id/item_wordlist_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="@string/item_wordlist" android:layout_toRightOf="@+id/icon" android:layout_centerVertical="true"/>
            <View android:background="?attr/color_page" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/item_walkandlisten" android:layout_width="match_parent" android:layout_height="45dp">
            <ImageView android:id="@+id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:src="?attr/drawable_listen" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/T2" android:textColor="?attr/color_button_text" android:id="@+id/item_walkandlisten_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="@string/item_walkandlisten" android:layout_toRightOf="@+id/icon" android:layout_centerVertical="true"/>
            <View android:background="?attr/color_page" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/item_selfcheck" android:layout_width="match_parent" android:layout_height="45dp">
            <ImageView android:id="@+id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:src="?attr/drawable_test" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/T2" android:textColor="?attr/color_button_text" android:id="@+id/item_selfcheck_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="@string/item_selfcheck" android:layout_toRightOf="@+id/icon" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:layout_width="25dp" android:layout_height="5dp" android:layout_marginRight="3dp" android:src="@drawable/triangle_white_down_normal_default" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>
