<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:id="@+id/vs_result" android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/result_score_panel" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <ImageView android:id="@+id/back" android:background="@drawable/fight_back_background" android:layout_width="@dimen/fight_back_width" android:layout_height="@dimen/fight_back_height" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:src="@drawable/fight_back_foreground" android:onClick="onClick"/>
        <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <include android:layout_gravity="center" android:id="@+id/vs_score_view" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/fight_score"/>
        <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.baicizhan.client.business.widget.RoundedButton android:textSize="20dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/vs_again" android:layout_width="0dp" android:layout_height="50dp" android:layout_marginRight="5dp" android:text="@string/fight_vs_again" android:layout_weight="1" app:cornerRadius="@dimen/fight_default_rect_radius" app:fillColor="@color/fight_vs_again_fill_color"/>
            <com.baicizhan.client.business.widget.RoundedButton android:textSize="20dp" android:textColor="@color/fight_nblue_pdeepblue_sdeepblue" android:gravity="center" android:id="@+id/vs_show_score" android:layout_width="0dp" android:layout_height="50dp" android:layout_marginLeft="5dp" android:text="@string/fight_share_score" android:layout_weight="1" app:strokeWidth="1px" app:cornerRadius="@dimen/fight_default_rect_radius" app:strokeColor="@color/fight_nblue_pdeepblue_sdeepblue" app:fillColor="@color/fight_window_background_color"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/result_detail_panel" android:paddingLeft="20dp" android:paddingTop="20dp" android:paddingRight="20dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="20dp" android:gravity="center" android:id="@+id/dt_vs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:minHeight="28dp" android:text="@string/fight_slash" android:singleLine="true" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="16dp" android:gravity="center" android:id="@+id/dt_me_nick" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="28dp" android:singleLine="true" android:layout_toLeftOf="@+id/dt_vs"/>
        <TextView android:textSize="16dp" android:gravity="center" android:id="@+id/dt_part_nick" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="28dp" android:singleLine="true" android:layout_toRightOf="@+id/dt_vs"/>
        <ListView android:id="@android:id/list" android:focusable="true" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:listSelector="#00000000" android:cacheColorHint="#00000000" android:divider="#00000000" android:layout_below="@+id/dt_vs"/>
    </RelativeLayout>
</LinearLayout>
