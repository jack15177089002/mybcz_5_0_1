<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/wordtesting_frame_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/wordtesting_result_content" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/wordtesting_result_top" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_weight="1">
            <ImageView android:id="@+id/wordtesting_bo_head" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="107dp" android:src="@drawable/wordtesting_bobo" android:layout_alignParentTop="true" android:contentDescription="@string/wordtesting_content_desc_default"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/wordtesting_result_score" android:background="@drawable/wordtesting_round_corner_dark_background" android:paddingLeft="45dp" android:paddingTop="20dp" android:paddingRight="45dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="95dp" android:layout_marginRight="95dp" android:layout_below="@+id/wordtesting_bo_head">
                <TextView android:textSize="@dimen/wordtesting_result_title_size" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wordtesting_result_title"/>
                <TextView android:textSize="@dimen/wordtesting_result_score_size" android:textColor="@color/business_def_blue_color" android:layout_gravity="center_horizontal" android:id="@+id/wordtesting_score_num" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <ScrollView android:id="@+id/wordtesting_chedan_scroll" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                    <TextView android:textSize="@dimen/wordtesting_result_chedan_size" android:textColor="#88ffffff" android:id="@+id/wordtesting_chedan_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="2dp"/>
                </ScrollView>
            </LinearLayout>
            <ImageView android:id="@+id/wordtesting_bo_lhand" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="106dp" android:layout_marginBottom="-3dp" android:src="@drawable/wordtesting_bo_left_hand" android:layout_alignBottom="@+id/wordtesting_bo_head" android:layout_alignParentLeft="true" android:contentDescription="@string/wordtesting_content_desc_default"/>
            <ImageView android:id="@+id/wordtesting_bo_rhand" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-15dp" android:layout_marginBottom="-3dp" android:src="@drawable/wordtesting_bo_right_hand" android:layout_toRightOf="@+id/wordtesting_bo_head" android:layout_alignBottom="@+id/wordtesting_bo_head" android:contentDescription="@string/wordtesting_content_desc_default"/>
            <ImageView android:id="@+id/wordtesting_yangguo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="80dp" android:src="@drawable/wordtesting_yangguo" android:layout_alignBottom="@+id/wordtesting_result_score" android:layout_alignParentRight="true" android:contentDescription="@string/wordtesting_content_desc_default"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/wordtesting_result_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="95dp" android:layout_marginRight="95dp" android:layout_marginBottom="10dp">
            <com.baicizhan.client.business.view.StrokeButton android:textSize="@dimen/wordtesting_result_ctrl_text_size" android:id="@+id/wordtesting_again" android:layout_width="0dp" android:layout_height="50dp" android:layout_marginRight="8dp" android:text="@string/wordtesting_result_ctrl_again" android:layout_weight="1" app:business_style="blue"/>
            <com.baicizhan.client.business.view.StrokeButton android:textSize="@dimen/wordtesting_result_ctrl_text_size" android:id="@+id/wordtesting_exit" android:layout_width="0dp" android:layout_height="50dp" android:layout_marginRight="8dp" android:text="@string/wordtesting_result_ctrl_exit" android:layout_weight="1" app:business_style="blue"/>
            <Button android:textSize="@dimen/wordtesting_result_ctrl_text_size" android:textColor="@color/wordtesting_common_white" android:id="@+id/wordtesting_share" android:background="@drawable/wordtesting_score_button" android:layout_width="0dp" android:layout_height="50dp" android:text="@string/wordtesting_reuslt_ctrl_share" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/wordtesting_back" android:background="@drawable/business_back_background" android:layout_width="@dimen/main_back_width" android:layout_height="@dimen/main_back_height" android:layout_margin="10dp" android:src="@drawable/business_back_foreground" android:contentDescription="@string/wordtesting_content_desc_default"/>
    <View android:id="@+id/wordtesting_mask" android:background="#ff000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
