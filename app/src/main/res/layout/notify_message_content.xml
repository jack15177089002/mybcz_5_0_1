<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="?attr/color_common_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/notify_msg_bar" android:background="?attr/color_message_head" android:layout_width="match_parent" android:layout_height="50dp"/>
    <ImageView android:id="@+id/notify_msg_back" android:background="@drawable/business_common_selector" android:paddingLeft="11dp" android:paddingRight="11dp" android:layout_width="wrap_content" android:layout_height="50dp" android:src="?attr/drawable_message_back"/>
    <TextView android:textSize="@dimen/T5" android:textColor="?attr/color_message_titletexticon" android:gravity="center" android:id="@+id/notify_msg_title" android:layout_width="wrap_content" android:layout_height="50dp" android:text="MESSAGE" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="@dimen/T3" android:textColor="?attr/color_message_titletexticon" android:gravity="center" android:id="@+id/notify_msg_share" android:background="@drawable/business_common_selector" android:paddingLeft="11dp" android:paddingRight="11dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="50dp" android:text="分享" android:layout_alignParentRight="true"/>
    <TextView android:textSize="20dp" android:textColor="@android:color/darker_gray" android:gravity="center" android:id="@+id/notify_msg_load_failed" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="消息加载失败，点击重试" android:layout_below="@+id/notify_msg_bar"/>
    <WebView android:id="@+id/notify_msg_webcontent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/notify_msg_bar"/>
    <ProgressBar android:id="@+id/notify_msg_loading_progress" android:layout_width="match_parent" android:layout_height="4dp" android:progressDrawable="@drawable/business_progress_horizontal" android:layout_below="@+id/notify_msg_bar" style="?android:attr/progressBarStyleHorizontal"/>
</RelativeLayout>
