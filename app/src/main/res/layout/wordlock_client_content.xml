<?xml version="1.0" encoding="utf-8"?>
<com.baicizhan.client.wordlock.view.LockBgLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/wordlock_client_content" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/wordlock_mask" android:background="#88000000" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/wordlock_bottom_bar" android:background="#66333a4d" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true">
        <include layout="@layout/wordlock_status_view"/>
        <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:src="@drawable/wordlock_v_divider" android:contentDescription="@string/wordlock_default_iv_description"/>
        <ImageView android:id="@+id/wordlock_search" android:paddingLeft="18dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/dict_search_white_default"/>
        <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:src="@drawable/wordlock_v_divider" android:contentDescription="@string/wordlock_default_iv_description"/>
        <TextView android:textSize="@dimen/wordlock_op_unlock_size" android:textColor="@color/wordlock_op_unlock_color" android:gravity="center" android:id="@+id/wordlock_op_tip" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/wordlock_op_unlock"/>
    </LinearLayout>
    <com.baicizhan.client.wordlock.view.DotsNavigation android:id="@+id/wordlock_dots_nav" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:layout_above="@+id/wordlock_bottom_bar" android:layout_centerHorizontal="true"/>
    <com.baicizhan.client.wordlock.view.PullToRefreshWordLine android:id="@+id/wordlock_pull2refresh_wordline" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/wordlock_bottom_bar" app:ptrHeaderBackground="#00000000" app:ptrMode="both" app:ptrAnimationStyle="flip"/>
    <FrameLayout android:id="@+id/wordlock_more_info_frame" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/wordlock_bottom_bar"/>
    <FrameLayout android:id="@+id/wordlock_search_frame" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ViewStub android:id="@+id/wordlock_stub_first_settings" android:focusable="true" android:clickable="true" android:layout="@layout/wordlock_first_settings" android:inflatedId="@+id/wordlock_first_settings" android:layout_width="match_parent" android:layout_height="match_parent"/>
</com.baicizhan.client.wordlock.view.LockBgLayout>
