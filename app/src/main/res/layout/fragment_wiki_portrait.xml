<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="?attr/color_common_bg" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/basic_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/is_today_new" android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/newword_normal_default" android:scaleType="fitXY" android:layout_alignParentRight="true"/>
        <ImageView android:id="@+id/share" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="?attr/drawable_wiki_share" android:layout_alignParentRight="true"/>
        <TextView android:textSize="@dimen/T7" android:textColor="?attr/color_wiki_text_night" android:id="@+id/topic_word" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:text="childhood"/>
        <TextView android:textSize="@dimen/T3" android:textColor="?attr/color_wiki_text_night" android:id="@+id/topic_phonetic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="10dp" android:singleLine="true" android:layout_below="@+id/topic_word"/>
        <TextView android:textColor="?attr/color_button_text_mediabar" android:id="@+id/topic_mean_cn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="10dp" android:maxLines="6" android:layout_below="@+id/topic_phonetic"/>
        <ImageView android:id="@+id/topic_image" android:layout_width="160dp" android:layout_height="120dp" android:layout_marginTop="15dp" android:scaleType="fitCenter" android:layout_below="@+id/topic_mean_cn"/>
    </RelativeLayout>
    <include android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_weight="1" layout="@layout/wiki_clauses"/>
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="36dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:layout_marginBottom="5dp">
        <ImageButton android:id="@+id/cancel_kill" android:background="?attr/drawable_button_line" android:visibility="gone" android:layout_width="45dp" android:layout_height="match_parent" android:src="?attr/drawable_unslash" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="@dimen/T3" android:textColor="?attr/color_button_text" android:gravity="center" android:id="@+id/kill" android:background="?attr/drawable_button_line" android:visibility="visible" android:layout_width="45dp" android:layout_height="match_parent" android:text="斩"/>
        <TextView android:textSize="@dimen/T3" android:textColor="?attr/color_button_text" android:gravity="center" android:id="@+id/continue_learn" android:background="?attr/drawable_button_line" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="60dp" android:text="继续做题"/>
    </RelativeLayout>
</LinearLayout>
