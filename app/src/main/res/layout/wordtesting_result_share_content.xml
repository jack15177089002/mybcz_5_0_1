<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/wordtesting_result_share" android:background="@color/wordtesting_frame_color" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="80dp" android:layout_marginRight="80dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/wordtesting_result_share_content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
        <RelativeLayout android:id="@+id/wordtesting_result_share_top" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_weight="1">
            <LinearLayout android:orientation="vertical" android:id="@+id/wordtesting_result_share_score" android:paddingLeft="70dp" android:paddingTop="5dp" android:paddingRight="70dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="40dp" android:layout_below="@+id/wordtesting_bo_head">
                <TextView android:textSize="@dimen/wordtesting_result_title_size" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wordtesting_result_title"/>
                <TextView android:textSize="@dimen/wordtesting_result_score_size" android:textColor="@color/business_def_blue_color" android:layout_gravity="center_horizontal" android:id="@+id/wordtesting_share_score_num" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <ScrollView android:id="@+id/wordtesting_share_chedan_scroll" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                    <TextView android:textSize="@dimen/wordtesting_result_chedan_size" android:textColor="#88ffffff" android:id="@+id/wordtesting_share_chedan_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="2dp"/>
                </ScrollView>
            </LinearLayout>
            <ImageView android:id="@+id/wordtesting_share_yangguo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-65dp" android:src="@drawable/wordtesting_yangguo" android:layout_toRightOf="@+id/wordtesting_result_share_score" android:layout_alignParentBottom="true" android:contentDescription="@string/wordtesting_content_desc_default"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/wordtesting_result_share_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
            <ImageView android:id="@+id/wordtesting_share_to_weixin" android:paddingLeft="20dp" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/business_weixin_share_selector" android:layout_weight="1" android:contentDescription="@string/wordtesting_content_desc_default"/>
            <ImageView android:id="@+id/wordtesting_share_to_weixin_timeline" android:paddingRight="20dp" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/business_weixin_timeline_share_selector" android:layout_weight="1" android:contentDescription="@string/wordtesting_content_desc_default"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/wordtesting_close" android:background="@drawable/business_close_selector" android:layout_width="@dimen/main_back_width" android:layout_height="@dimen/main_back_height" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:contentDescription="@string/wordtesting_content_desc_default"/>
</RelativeLayout>
